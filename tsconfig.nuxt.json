// tsconfig.json (ou tsconfig.nuxt.json)
{
  "compilerOptions": {
    // ... outras opções
    "paths": {
      // Essas são as definições padrão do Nuxt:
      "~": ["./"],
      "~/*": ["./*"],
      "@": ["./"],
      "@/*": ["./*"],
      // Adicione explicitamente a pasta server se não for padrão:
      "~/server/*": ["./server/*"] 
      // O alias '~/server/utils/db.ts' já deve funcionar com a definição acima.
    }
  }
}